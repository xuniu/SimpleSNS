<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="me.xuneal.simplesns.app.ui.AboutMeActivity">

    <TextView
            android:id="@+id/title"
            android:text="@string/about_me"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/red"
            android:textSize="56sp"
            />
    <View
            android:id="@+id/split_line"
            android:layout_below="@id/title"
            android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/black"
          android:alpha=".1"
          android:layout_margin="16dp"
          />
    <ImageView
            android:layout_below="@id/title"
            android:layout_centerHorizontal="true"
            android:layout_width="18dp" android:layout_height="18dp"
            android:src="@drawable/ic_launcher"/>
    <TextView
            android:layout_below="@id/split_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I'm a Senior Android Developer who is looking for a remote work,If you like me, Pls send me a mail to imxuneal@gmail.com"
            />

</RelativeLayout>
